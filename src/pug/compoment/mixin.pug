-
    let mainMenu = [
        [ 'home ', '#'],
        [ 'Why MISOCIAL', '#'],
        [ 'Features ', '#'],
        [ 'Articles ', '#'],
        [ 'Pricing ', '#'],
    ]

mixin menu(mainMenu, colorTheme="light")
    .navigation.flex-between.items-center.gap 
    .logo(class=colorTheme)
        a(href="index.html") 
            img(src="../img/logo.png", alt="Logo")
            span MISOCIAL
    nav.nav.flex-between.items-center(class=colorTheme)
        ul 
            for item in mainMenu 
                li 
                    a(href=item[1]) #{item[0]}
        a.cta-nav(href="#") get started     

