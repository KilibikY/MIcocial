mixin card(oneCard)
    figure
        figcaption 
            img(src=oneCard.img, alt="#")
            p.personal #{oneCard.personal}
            p.price
                span.currency #{oneCard.currency}
                b #{oneCard.price}
                if isMonth
                    | /month
                else 
                    | /month 
            ul.description
                for item in oneCard.description 
                    li #{item}
            a.Onecard(href=oneCard.href) #{oneCard.btn}
